FROM mitodl/ol-infrastructure as infra
RUN find /home/app/workspace/.venv/ -type l -exec unlink {} \;

FROM pulumi/pulumi-python:3.27.0
ENV PYTHONUNBUFFERED=1

COPY bin/* /opt/resource/
COPY lib/* /opt/resource/lib/
ENV PATH /bin:/usr/bin/:/usr/local/bin:/home/app/.local/bin:/home/app/workspace/.venv/bin/
COPY --from=infra /home/app/workspace/.venv/ /home/app/workspace/.venv/

CMD ["/bin/sh"]
